  <%= simple_form_for @user.influencer, url: influencer_path(@user.influencer), html: { method: :put } do |f| %>
    <%= f.error_notification %>

    <%= f.input :pseudo %>
    <%= f.input :fb_url %>
    <%= f.input :tw_username %>
    <%= f.input :ig_url %>
    <%= f.input :description %>
    <%= f.input :language, collection: ["French", "Spanish", "English"] , prompt: "Language", label: false, class: 'form-control'%>
    <%= f.input :category_id, collection: Category.all , prompt: "Category", label: false%>
    <div class="text-center">
      <%= f.submit "Update Influencer Profile", class: "btn btn-success" %>
      <%= link_to "See your profile", influencer_path(@user.influencer), class: "btn btn-success" %>
    </div>
  <% end %>
