<% content_for(:title_tag) do %>
  DASHBOARD
<% end %>
<h1><%= @user.first_name %> <%= @user.last_name %>'s Dahsboard</h1>
<div class="col-xs-12">
  <div class="tabs container">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" id="tab1" href="#inbox" aria-expanded="true"> Inbox</a></li>
      <li class=""><a data-toggle="tab" id="tab2" href="#Profile" aria-expanded="false">Profile</a></li>
      <li class=""><a data-toggle="tab" id="tab3" href="#Favorites" aria-expanded="false">Favorites</a></li>
    </ul>
    <div class="tab-content">
      <div id="inbox" class="tab-pane active">
        <div class="row">
          <div class="col-md-9">
            <ul id="conversations-list">
              <% @conversations.each do |conversation| %>
                <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
              <% end %>
            </ul>
          </div>
          <div class="col-md-3">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title">User list</h3>
              </div>
              <div class="panel-body">
                <ul>
                  <% @users.each do |user| %>
                    <li>
                      <%= link_to user.first_name, conversations_path(user_id: user), remote: true, method: :post %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="Profile" class="tab-pane"">
        <% if  @user.influencer %>
           <%= render "influencers/form_edit_influencer" %>
        <% end %>
        <%= render 'devise/registrations/edit' %>
      </div>
      <div id="Favorites" class="tab-pane">
        <div class="row">
        <% @favorites.each do |favorite| %>
          <div class="col-xs-12 col-sm-3 col-md-3">
            <%= render "shared/card", influencer: favorite.influencer %>
          </div>
        <% end %>
          </div>
      </div>
    </div>
  </div>
  </div>
