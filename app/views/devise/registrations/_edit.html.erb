<h3>Edit your Professional profile</h3>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group">
    <%= f.input :email, label: "Your email (needed to validate changes)", required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :first_name, label: "Your first name", required: false, input_html: {value: current_user.first_name}%>
    <%= f.input :last_name, label: "Your last name", required: false, input_html: {value: current_user.last_name} %>
    <%= f.input :description, label: "Describe yourself", :as => :text, required: false, input_html: {value: current_user.description || 'Describe yourself here'}%>

    <%= f.input :password, label: "New password", autocomplete: "off", placeholder: "Leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, label: "New password confirmation", required: false %>
    <%= f.input :current_password, label: "Current Password (needed to validate changes)", placeholder: "Currrent password needed to save your changes" , required: true %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Update Professional Profile", class: "btn buton-profile" %>
  </div>
<% end %>
